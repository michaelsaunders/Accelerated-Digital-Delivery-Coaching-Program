@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Person)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AssessmentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfAssessment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AreaCoaching)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NotesForAssessment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SummaryResult)
