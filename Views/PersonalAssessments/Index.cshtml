            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Person.PersonID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AssessmentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfAssessment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AreaCoaching)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NotesForAssessment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SummaryResult)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NextAsessmentDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PersonalAssessmentID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PersonalAssessmentID">Details</a> |
