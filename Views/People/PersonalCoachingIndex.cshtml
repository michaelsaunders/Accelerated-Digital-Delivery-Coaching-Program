@model IEnumerable<Accelerated_Digital_Delivery_Coaching_Program.Models.Person>

@{
    ViewData["Title"] = "Details";
    Layout = "_LayoutPersonalCoaching";
}


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PersonsName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NextAppointment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PersonsName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NextAppointment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDate)
                </td>
                <td>
                    <a asp-action="PersonalCoachingEdit" asp-route-id="@item.PersonID">Edit</a> |
                    <a asp-action="PersonalCoachingDetails" asp-route-id="@item.PersonID">Details</a> |
                    <a asp-action="PersonalCoachingDelete" asp-route-id="@item.PersonID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
