@model IEnumerable<Accelerated_Digital_Delivery_Coaching_Program.Models.TaskItem>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TaskName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Occurence)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TaskName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Occurence)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TaskItemID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TaskItemID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TaskItemID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
